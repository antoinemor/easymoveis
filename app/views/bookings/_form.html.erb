<%= simple_form_for [@listing, @booking] do |f| %>
  <%= f.error_notification %>
  <p class="text-center">START DATE</p>
  <%= f.input :start_date, as: :date_picker, label: false, placeholder: 'dd/mm/yyyy', required: true  %>
  <%= f.input :end_date, as: :date_picker, as: :hidden, placeholder: 'dd/mm/yyyy'  %>
  <div id="end-date-div" class="hidden">
    <div class="product-info-separation"></div>
    <p class="text-center">END DATE</p>
    <div class="text-center"><div class="product-main-info" id="end_date"></div></div>
  </div>
  <br>
  <%= f.simple_fields_for :delivery do |ff| %>
    <div class="product-info-separation"></div>
    <p class="text-center">DELIVERY METHOD</p>
    <%= ff.input :partner_delivery, label: 'Partner delivery' %>
    <p class="text-center" id="delivery-description">If you choose partner delivery, An EasyMoveis partner will deliver your furniture to your door for </p>
    <small><p class="text-center"><i>See below for details</i></p></small>
    <%= ff.input :delivery_price, as: :hidden %>
    <br>
  <% end %>


  <%= f.button :submit, class: "btn btn-block btn-primary", value: 'CREATE BOOKING!' %>
<% end %>

