<div class="padded">
  <h3 class="text-center">Discover</h3>
  <div class="discovery">
    <% Ambiance.all.each do |ambiance| %>
      <div class="ambiance-card"><%= image_tag ambiance.photo, class: 'ambiance-image' %>
        <div class="ambiance-card-title text-center"><%= ambiance.name.upcase %></div>
        <%= link_to '', ambiances_path(ambiance), class: "ambiance-card-link"  %>
      </div>
    <% end %>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function(){
      $('.discovery').slick({
        dots: true,
        infinite: true,
        speed: 300,
        slidesToShow: 4,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 2000,
        responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 1,
              infinite: true,
              dots: true
            }
          },
          {
            breakpoint: 600,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 1
            }
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1
            }
          }
        ]
        });
      });
    <% end %>
  <% end %>


