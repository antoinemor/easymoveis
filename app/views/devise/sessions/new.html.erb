<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="box-white box-margin-height">

        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-social btn-facebook btn-margin" do %>
              <span class="fa fa-facebook"></span> <div class="text-center"> <%= "LOG IN WITH #{OmniAuth::Utils.camelize(provider).upcase}"%></div>
            <% end %>
          <% end -%>
        <% end -%>

        <div class="or-bar">
          <div class="product-info-separation"></div>
          <p> OR </p>
          <div class="product-info-separation"></div>
        </div>


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email' %>
            <%= f.input :password, required: false, label: false, placeholder: 'Password' %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "LOG IN", class: "btn btn-block btn-red btn-margin" %>
          </div>
        <% end %>
        <%= render "devise/shared/links_no_fb" %>


      </div>
    </div>
  </div>
</div>
