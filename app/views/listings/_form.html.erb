<%= simple_form_for @listing do |f| %>
  <%= f.simple_fields_for :furniture, @listing.furniture do |furniture_form| %>
    <%= furniture_form.input :name %>
    <%= furniture_form.input :description %>
    <%= furniture_form.input :category, collection: Furniture::CATEGORY_OPTIONS %>
    <%= furniture_form.input :photos, as: :attachinary %>
  <% end %>
  <%= f.input :base_price %>
  <%= f.input :period_min, collection: Listing::PERIOD_OPTIONS %>
  <%= f.input :period_max, collection: Listing::PERIOD_OPTIONS  %>
  <%= f.association :ambiances, as: :check_boxes %>
  <%= f.simple_fields_for :address, @listing.address do |address_form| %>
    <%= address_form.input :address %>
    <%= address_form.input :zip_code %>
    <%= address_form.input :city %>
    <%= address_form.input :country %>
  <% end %>
  <%= f.button :submit, class: "btn btn-block btn-primary"  %>
<% end %>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDAWxIc0wOBq65W3aiQVOJD2chwjAgqY48"></script>
<% end %>
